<div class="container">

  <div class="row">
    <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
  		<h2>Sign In <small>Store all your snippets</small></h2>
  		<hr>

      <%= form_tag sessions_path do %>

    		<div class="form-group">
          <%= email_field_tag :email, nil, class: "form-control input-lg", placeholder:"Email Address" %>
    		</div>

        <div class="form-group">
          <%= password_field_tag :password, nil, class: "form-control input-lg", placeholder:"Password" %>
        </div>

        <hr>
        <div class="row">
          <div class="col-xs-12 col-md-6">
            <%= submit_tag 'Sign In', class: "btn btn-primary btn-block btn-lg" %>
          </div>
        </div>

      <% end %>

  	</div>
  </div>

</div>
